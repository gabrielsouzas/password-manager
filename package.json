{
  "name": "password-manager",
  "version": "1.0.0",
  "description": "Local password manager with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.gabrielsouzas.mysafe",
    "productName": "My Safe Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "style.css",
      "package.json"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "assets/icone.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "My Safe Manager"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielsouzas/password-manager.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/gabrielsouzas/password-manager/issues"
  },
  "homepage": "https://github.com/gabrielsouzas/password-manager#readme",
  "dependencies": {
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  }
}
